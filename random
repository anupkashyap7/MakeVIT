#include <Servo.h>
#include "sha1.h"
#include "TOTP.h"
#include <DS3231.h>
#include<Keypad.h>
#include <SPI.h>

#include <RFID.h>
#define SDA_DIO 9
#define RESET_DIO 8
RFID RC522(SDA_DIO, RESET_DIO); 
String a="";
int k=0;
int l=0;
Servo servo_test;
int angle = 0;



DS3231 rtc(SDA,SCL);
Time t;
uint8_t hmacKey[] = {0x71, 0x77, 0x65, 0x72, 0x74, 0x79, 0x75, 0x69, 0x6f, 0x70};

TOTP totp = TOTP(hmacKey, 10);

char code[7];
char inputCode[7];
int count = 0;

const byte ROWS = 4; 
const byte COLS = 4; 

char hexaKeys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};
byte rowPins[ROWS] = {42, 43, 44, 45}; 
byte colPins[COLS] = {46, 47, 48, 49};  


Keypad customKeypad = Keypad( makeKeymap(hexaKeys), rowPins, colPins, ROWS, COLS);

boolean doorOpen = false;
int attempt = 0;

void alert(int);

void setup() {
  Serial.begin(9600);
  rtc.begin();
  SPI.begin(); 
  RC522.init();
  servo_test.attach(10);
  int k=0;
  int l=0;

}

void loop(){
  rf();
  otp();
  door();
  }

  
void rf() {

  if (RC522.isCard())
  {
    a="";
    RC522.readCardSerial();
    //Serial.println("Card detected:");
    for(int i=0;i<5;i++)
    {
    a.concat(RC522.serNum[i]);
    }

    if(a == 2140240239145 || a == 421891911656){
      k=1;
      }
      else{
        k=0;
        }


  }
}

void otp(){

  char inputKey = customKeypad.getKey();
  if (inputKey != NO_KEY)
{
  //Serial.print(inputKey);
  if(inputKey == '#')
  {
    count = 0;
  }
  else if(inputKey == '*')
  {
    count = 0;
    k=2;
    l=2;
  }
  else
  {
     inputCode[count] = inputKey;
     ++count;
     if(count == 6)
     {
       //Serial.println();
       long GMT = rtc.getUnixTime(rtc.getTime());
       char* newCode = totp.getCode(GMT);
       inputCode[count] = '\0';
       if(strcmp(newCode,inputCode)==0)
       {
         doorOpen = true;
         count = 0;
         //Serial.println("Door opened");
         l=1;
         attempt = 0;
       }
       else
       {
         Serial.println("Error");
         count = 0;
         l=0;
         ++attempt;
       }
     }
 

  }
}
}

void door(){
  if(k==1 && l!=1){
    Serial.println("RF ID Verified");
    }
   else if(l==1 && k!=1){
    Serial.println("OTP Verified");
    } 

  
  else if(k==1 && l==1){
    Serial.println("Door open");
    delay(500);
    servo_test.write(180);
    delay(100);
    
    }
  else if(k==2 && l==2){
    Serial.println("Door closed");
    delay(500);
    servo_test.write(0);
    delay(100);
  }
  else{}  
    }  
  

